<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#E6E7E8"
    tools:context=".ResultPageOther" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >
        
        <ImageView 
            android:id="@+id/logo_sport_result_other"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        
        <TextView
            android:id="@+id/text_sport_result_other"
            android:text="Sport"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textColor="#26B99A" />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/listResult_other"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="1dp" />
    
    <LinearLayout 
        android:id="@+id/noResult_other"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak Ada Pertandingan"
            android:textColor="#26B99A"
            android:textSize="20sp"
            android:alpha="0.5"/>
    </LinearLayout>
</LinearLayout>
