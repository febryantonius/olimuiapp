<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26B999"
        android:gravity="center_horizontal"
        android:text="Tunggal Putra - Group A"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#9CD4C4"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="3dp" >

        <ImageView
            android:id="@+id/logo_faculty_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:src="@drawable/fe" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmasi (2) - (1) Fasilkom"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
			
            <TextView
                android:id="@+id/match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabtu, 21/11/2014"
                android:textSize="13sp"
                android:textColor="@android:color/black" />
            
            <TextView
                android:id="@+id/match_time_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.00 - 20.00 @ A. Setyaningrum"
                android:textSize="13sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logo_faculty_2"
            android:src="@drawable/fasilkom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical" />

    </LinearLayout>

</LinearLayout>
